<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1F509A"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_margin="12dp">

        <ImageView
            android:layout_width="310dp"
            android:layout_height="258dp"
            android:layout_marginHorizontal="20dp"
            android:src="@drawable/time_flies_cuate" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/kasepi"
            android:hint="First Name"
            android:textColor="@color/white"
            android:layout_marginHorizontal="20dp"
            android:textSize="20sp"
            android:textColorHint="#FFAAAA"
            android:background="@drawable/rounded_corner"
            android:padding="18dp"
            android:inputType="text"
            android:id="@+id/firstname_input"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/kasepi"
            android:hint="Last Name"
            android:textColor="@color/white"
            android:layout_marginHorizontal="20dp"
            android:textSize="20sp"
            android:textColorHint="#FFAAAA"
            android:background="@drawable/rounded_corner"
            android:padding="18dp"
            android:inputType="text"
            android:id="@+id/lastname_input"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/kasepi"
            android:hint="UserName"
            android:textColor="@color/white"
            android:layout_marginHorizontal="20dp"
            android:textSize="20sp"
            android:textColorHint="#FFAAAA"
            android:background="@drawable/rounded_corner"
            android:padding="18dp"
            android:inputType="text"
            android:id="@+id/username_input"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="16dp"
            android:hint="Email"
            android:fontFamily="@font/kasepi"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textColorHint="#FFAAAA"
            android:background="@drawable/rounded_corner"
            android:padding="18dp"
            android:inputType="textEmailAddress"

            android:id="@+id/email_input"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Password"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textColorHint="#FFAAAA"
            android:background="@drawable/rounded_corner"
            android:layout_marginHorizontal="20dp"
            android:padding="18dp"
            android:fontFamily="@font/kasepi"
            android:inputType="textPassword"
            android:id="@+id/password_input"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:text="Register"
            android:fontFamily="@font/kasepi"
            android:textColor="@color/white"
            android:background="@drawable/rounded_corner"
            android:textSize="20sp"
            android:layout_marginTop="25dp"
            android:id="@+id/register_btn"

            android:layout_marginStart="15dp"
            android:backgroundTint="#FF7777"
            android:padding="12dp"
            android:paddingHorizontal="50dp"

            />

        <TextView
            android:id="@+id/login_redirect_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Already have an account? Login"
            android:gravity="center"
            android:fontFamily="@font/kasepi"
            android:layout_marginTop="18dp"
            android:textSize="18sp"
            android:textColor="#FFF4B7"
            />

    </LinearLayout>
</RelativeLayout>
